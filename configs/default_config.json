{
  "_description": "Default configuration for all RhoDesign MCP scripts",
  "_version": "1.0.0",

  "environment": {
    "python_version": "3.9",
    "conda_env": "./env_py39",
    "required_packages": [
      "torch==1.12.1",
      "numpy>=1.20.0",
      "biotite>=0.37.0",
      "tqdm>=4.60.0",
      "torch-geometric>=2.0.0"
    ]
  },

  "paths": {
    "repo_root": "repo/RhoDesign",
    "checkpoint_dir": "checkpoint",
    "examples_dir": "examples/data",
    "output_dir": "output",
    "configs_dir": "configs"
  },

  "model_checkpoints": {
    "with_ss": {
      "path": "checkpoint/ss_apexp_best.pth",
      "url": "https://drive.google.com/drive/folders/1H3Itu6TTfaVErPH50Ly7rmQDxElH3JEz",
      "description": "Model with secondary structure constraints"
    },
    "no_ss": {
      "path": "checkpoint/no_ss_apexp_best.pth",
      "url": "https://drive.google.com/drive/folders/1H3Itu6TTfaVErPH50Ly7rmQDxElH3JEz",
      "description": "Model without secondary structure constraints"
    }
  },

  "default_inference": {
    "device": -1,
    "temperature": 1.0,
    "random_seed": 1,
    "max_sequence_length": 1000
  },

  "default_alphabet": {
    "tokens": ["A", "G", "C", "U", "X"],
    "prepend_tokens": ["<null_0>", "<pad>", "<eos>", "<unk>"],
    "append_tokens": ["<cls>", "<mask>", "<sep>"],
    "prepend_bos": true,
    "append_eos": false
  },

  "validation": {
    "validate_input_files": true,
    "validate_sequences": true,
    "check_gpu_memory": true,
    "warn_on_cpu_usage": true
  },

  "logging": {
    "level": "INFO",
    "show_progress": true,
    "save_logs": false,
    "log_file": "logs/rhodesign_mcp.log"
  }
}